<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" elementFormDefault="qualified" attributeFormDefault="unqualified" vc:minVersion="1.1">
	<xs:element name="документ">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="номер" type="xs:integer"/>
				<xs:element name="дата" type="xs:date"/>
				<xs:element name="шапка" type="xs:string"/>
				<xs:element name="тема">
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:maxLength value="150"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
				<xs:element name="преамбула">
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:maxLength value="350"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
				<xs:element name="подпись_должность" type="xs:string"/>
				<xs:element name="подпись_фио" type="xs:string"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
